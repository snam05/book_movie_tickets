{
  "compilerOptions": {
    /* 1. Thiết lập dự án cơ bản */
    "target": "ES2020", 
    "module": "CommonJS", 
    "rootDir": "./", 
    "outDir": "./dist", 

    /* 2. Quy tắc nghiêm ngặt (Strong Typing) */
    "strict": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true, 

    /* 3. Phân giải Module và Type */
    "moduleResolution": "node", 
    "resolveJsonModule": true, 
    "allowJs": true, 
    "checkJs": true,
    "noImplicitAny": true, 
    "lib": ["ES2020"],
    "sourceMap": true, 
    "noUnusedLocals": true, 
    "noUnusedParameters": true,
    
    /* 4. Khác */
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true 
  },
  
    "include": ["**/*.ts", "**/*.js"],
    "exclude": ["node_modules", "dist"]
}